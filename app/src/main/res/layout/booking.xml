<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
        android:id="@+id/TextViewForm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/open_sans_bold"
        android:text="Form Pribadi Pemohon"
        android:textSize="20sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

    <EditText
        android:id="@+id/nama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/TextViewForm"
        android:layout_centerHorizontal="false"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/open_sans"
        android:hint="Nama lengkap"
        android:singleLine="true" />

    <EditText
        android:id="@+id/no_ktp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/nama"
        android:layout_centerHorizontal="false"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/open_sans"
        android:hint="Nomor KTP"
        android:inputType="number"
        android:paddingStart="5dp"
        android:singleLine="true" />

    <EditText
        android:id="@+id/tempatlahir"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/no_ktp"
        android:layout_centerHorizontal="false"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/open_sans"
        android:hint="Tempat Lahir"
        android:singleLine="true" />

    <EditText
        android:id="@+id/tanggalLahir"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/tempatlahir"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/open_sans"
        android:hint="Tanggal Lahir"
        android:inputType="date" />

    <View
        android:id="@+id/line"
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"
        android:layout_below="@id/tanggalLahir"
        android:background="#D3D3D3" />

    <EditText
        android:id="@+id/alamatRumah"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/line"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="false"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/open_sans"
        android:hint="Alamat"

        android:singleLine="true" />

    <EditText
        android:id="@+id/blok"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_below="@id/alamatRumah"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/open_sans_light"
        android:hint="Blok" />

    <EditText
        android:id="@+id/nomor"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_below="@id/alamatRumah"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@+id/blok"
        android:fontFamily="@font/open_sans_light"
        android:hint="Nomor"
        android:inputType="number" />

    <EditText
        android:id="@+id/RT"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_below="@id/alamatRumah"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@+id/nomor"
        android:fontFamily="@font/open_sans_light"
        android:hint="RT"
        android:inputType="number" />

    <EditText
        android:id="@+id/RW"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_below="@id/alamatRumah"
        android:layout_alignParentRight="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_toEndOf="@+id/RT"
        android:fontFamily="@font/open_sans_light"
        android:hint="RW"
        android:inputType="number" />

    <EditText
        android:id="@+id/kelurahan"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@id/blok"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/open_sans_light"
        android:hint="Kelurahan" />

    <EditText
        android:id="@+id/kecamatan"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@id/blok"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_toEndOf="@id/kelurahan"
        android:fontFamily="@font/open_sans_light"
        android:hint="Kecamatan"
        />

    <EditText
        android:id="@+id/kota"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_below="@id/kelurahan"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/open_sans_light"
        android:hint="Kota" />

    <EditText
        android:id="@+id/provinsi"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_below="@id/kelurahan"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@+id/kota"
        android:fontFamily="@font/open_sans_light"
        android:hint="Provinsi" />

    <EditText
        android:id="@+id/kodepos"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:layout_below="@id/kelurahan"
        android:layout_alignParentRight="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_toEndOf="@+id/provinsi"
        android:fontFamily="@font/open_sans_light"
        android:hint="Kode Pos"
        android:inputType="number" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/SesuaiKTP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/kota"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/open_sans"
        android:gravity="center"
        android:text="Sesuai KTP   "
        android:textOff=""
        android:textOn=""
        android:textSize="16sp"
        android:thumb="@drawable/switchbutton"
        app:showText="true"
        app:track="@drawable/switch_track" />

    <View
        android:id="@+id/line2"
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"
        android:layout_below="@id/SesuaiKTP"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"
        android:background="#D3D3D3" />

    <EditText
        android:id="@+id/No_Handphone"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:layout_below="@id/line2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/open_sans"
        android:hint="No Telepon" />

    <EditText
        android:id="@+id/telepon_rumah"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@id/line2"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_toEndOf="@id/No_Handphone"
        android:fontFamily="@font/open_sans"
        android:hint="No Telepon Rumah"
        android:inputType="number" />

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/No_Handphone"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/open_sans_light"
        android:hint="Email"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/pendidikan"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/No_Handphone"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/open_sans_light"
        android:hint="Email"
        android:inputType="textEmailAddress" />

    <Spinner
        android:id="@+id/spinner_pendidikan"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_below="@id/email"
        android:layout_alignParentBottom="false"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"></Spinner>

    <Spinner
        android:id="@+id/spinner_status_hubungan"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_below="@id/email"
        android:layout_alignParentBottom="false"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@id/spinner_pendidikan"></Spinner>

    <Spinner
        android:id="@+id/spinner_status_rumah"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_below="@id/email"
        android:layout_alignParentBottom="false"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@id/spinner_status_hubungan"></Spinner>

    <EditText
        android:id="@+id/lamaDitempati"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinner_pendidikan"
        android:layout_centerHorizontal="false"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/open_sans"
        android:hint="Lama Rumah Ditempati"
        android:singleLine="true" />


    </RelativeLayout>

</ScrollView>